    <body>
        <center>
            <img src="/images/scot_logo_473x473.png" alt="SCOT logo">
            <h1>SCOT Login</h1>

            <form action="/sso">
                <input type="hidden" name ="orig_url" value="<%= $orig_url %>">
                <input type="submit" value="Sign in using SSO" />
            </form>

